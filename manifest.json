{
    "name": "Emissions Buddy!",
    "version": "1.0.0",
    "description": "Track your travel emissions with Emissions Buddy!",
    "manifest_version": 3,
    "author": "Ethan Sychangco, Alyce Wu, Sean Lai, Andy Li",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
      ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Emissions Buddy!"
    },
    "content_scripts": [
        {
            "matches": ["https://www.alaskaair.com/*", "https://www.delta.com/*", "https://www.delta.com/*", "https://www.southwest.com/*", "https://www.united.com/*"],
            "js": ["./js/popup.js"]
        }
    ]
}